/*test 1d arrays*/
int function arrtest()
begin
	begin
		type intArray = array [100] of int;
		var arr: intArray := 0;
		var i: int;
		for i := 1 to 100 do	/*I think this is how indexing works*/
			arr[i] := 1;
		enddo;
		
		i:= 1;
		while i <= 100 do
			if arr[i] >= 1 then
				return 0;
			endif;
		enddo;
		return 1;
	end;
end;
/*test 2d arrays*/
int function arr2dtest()
begin
	begin
		type intArray = array [100] [100] of int;
		var arr: intArray := 0;
		var i, j: int;
		for i := 1 to 100 do	/*I think this is how indexing works*/
			for j := 1 to 100 do
				arr[i-1][j-1] := 1;
			enddo;
		enddo;
		
		i:= 1;
		while i <= 100 do
			for j:= 1 to 100 do
				if arr[i+1][j*2] > 1 then
					return 0;
				endif;
			enddo;
		enddo;
		return 1;
	end;
end;




